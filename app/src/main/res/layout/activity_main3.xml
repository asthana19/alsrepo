<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginStart="356dp"
        android:layout_marginLeft="356dp"
        android:clickable="true"
        app:backgroundTint="#009688"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/main"
        app:srcCompat="@android:drawable/ic_delete" />

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="Know About ALS" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="ALS DIET and NUTRITION" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="Healing with Pranayam" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="Speech and Swallowing Exercises" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text=" Home ICU " />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:text="Meet our Caregivers" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>